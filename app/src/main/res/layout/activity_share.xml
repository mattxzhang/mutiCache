<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            style="@style/btnFunctionBlue"
            android:onClick="clickInstructions"
            android:text="使用说明"/>
        <Button
            style="@style/btnFunctionGray"
            android:onClick="clickShareSaveDataDefault"
            android:text="默认SharePreferences保存"/>

        <Button
            style="@style/btnFunctionBlue"
            android:onClick="clickShareGetDataDefault"
            android:text="默认SharePreferences获取"/>

        <Button
            style="@style/btnFunctionGray"
            android:onClick="clickShareSaveDataNamed"
            android:text="命名SharePreferences保存"/>

        <Button
            style="@style/btnFunctionBlue"
            android:onClick="clickShareGetDataNamed"
            android:text="命名SharePreferences获取"/>
    </LinearLayout>

</ScrollView>
