<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"/>
        <EditText
            android:id="@+id/edt_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"/>

        <Button
            style="@style/btnFunctionGray"
            android:onClick="clickDBUserAdd"
            android:text="添加用户" />

        <Button
            android:id="@+id/btn_del_user"
            style="@style/btnFunctionBlue"
            android:onClick="clickDBUserDelete"
            android:text="删除用户" />

        <Button
            style="@style/btnFunctionGray"
            android:onClick="clickDBUserUpdate"
            android:text="更新用户" />

        <Button
            style="@style/btnFunctionBlue"
            android:onClick="clickDBUserSelect"
            android:text="查看用户" />

    </LinearLayout>
</ScrollView>